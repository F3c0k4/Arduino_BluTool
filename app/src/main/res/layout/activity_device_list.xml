<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".DeviceList">

    <Spinner
        android:id="@+id/Spinner_Paired"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        style="@style/SpinnerAsEditText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_start_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Spinner_Paired"
        android:layout_centerHorizontal="true"
        android:onClick="TakeControl"
        android:text="Start control" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_above="@id/Spinner_Paired"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:text="Selected device:" />
</RelativeLayout>